@model IEnumerable<Project.Models.Car>

@{
    ViewBag.Title = "Available Cars";
    Layout = "~/Views/Shared/Argon.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">

            <div class="card shadow border-0">
                <div class="card-header bg-transparent">
                    <h2 class="mb-0 text-center">Available Cars</h2>
                </div>
                <div class="card-body">

                    <div class="table-responsive">
                        <table class="table align-items-center table-flush">
                            <thead class="thead-light">
                                <tr>
                                    <th>Brand</th>
                                    <th>Seller-Name</th>
                                    <th>Model</th>
                                    <th>Year</th>
                                    <th>Price</th>
                                    <th>Mileage</th>
                                    <th>Fuel Type</th>
                                    <th>Transmission</th>
                                    <th class="text-center">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var car in Model)
                                {
                                    <tr>
                                        <td>@car.Brand</td>
                                        <td>@(car.User != null ? car.User.Name : "Unknown")</td>
                                        <td>@car.Model</td>
                                        <td>@car.Year</td>
                                        <td>₹@string.Format("{0:N0}", car.Price)</td>
                                        <td>@car.Mileage km</td>
                                        <td>@car.Fuel_type</td>
                                        <td>@car.Transmission</td>
                                        <td class="text-center">
                                            <a href="@Url.Action("Details", "Buyer", new { id = car.Id })"
                                               class="btn btn-sm btn-primary">
                                                View
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                </div>
            </div>

        </div>
    </div>
</div>
