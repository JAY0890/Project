@model Project.Models.Car

@{
    ViewBag.Title = "Add New Car";
}

<h2>Add New Car</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(m => m.Name, new { @class = "control-label col-md-2" })
            <div class="col-md-10">@Html.TextBoxFor(m => m.Name, new { @class = "form-control" })</div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Brand, new { @class = "control-label col-md-2" })
            <div class="col-md-10">@Html.TextBoxFor(m => m.Brand, new { @class = "form-control" })</div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Model, new { @class = "control-label col-md-2" })
            <div class="col-md-10">@Html.TextBoxFor(m => m.Model, new { @class = "form-control" })</div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Year, new { @class = "control-label col-md-2" })
            <div class="col-md-10">@Html.TextBoxFor(m => m.Year, new { @class = "form-control" })</div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Price, new { @class = "control-label col-md-2" })
            <div class="col-md-10">@Html.TextBoxFor(m => m.Price, new { @class = "form-control" })</div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Mileage, new { @class = "control-label col-md-2" })
            <div class="col-md-10">@Html.TextBoxFor(m => m.Mileage, new { @class = "form-control" })</div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Fuel_type, new { @class = "control-label col-md-2" })
            <div class="col-md-10">@Html.TextBoxFor(m => m.Fuel_type, new { @class = "form-control" })</div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Transmission, new { @class = "control-label col-md-2" })
            <div class="col-md-10">@Html.TextBoxFor(m => m.Transmission, new { @class = "form-control" })</div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </div>
    </div>
}
