@model Project.Models.Car

@{
    ViewBag.Title = "Add New Car";
    Layout = "~/Views/Shared/Argon.cshtml";
}

<div class="container-fluid mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header bg-gradient-primary text-white">
                    <h4 class="mb-0">Add New Car</h4>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("Create", "Seller", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger mb-3" })

                        <!-- Existing car fields -->
                        <div class="mb-3">
                            @Html.LabelFor(m => m.Name, new { @class = "form-label" })
                            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(m => m.Brand, new { @class = "form-label" })
                            @Html.TextBoxFor(m => m.Brand, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Brand, "", new { @class = "text-danger" })
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(m => m.Model, new { @class = "form-label" })
                            @Html.TextBoxFor(m => m.Model, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Model, "", new { @class = "text-danger" })
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(m => m.Year, new { @class = "form-label" })
                            @Html.TextBoxFor(m => m.Year, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Year, "", new { @class = "text-danger" })
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(m => m.Price, new { @class = "form-label" })
                            @Html.TextBoxFor(m => m.Price, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Price, "", new { @class = "text-danger" })
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(m => m.Mileage, new { @class = "form-label" })
                            @Html.TextBoxFor(m => m.Mileage, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Mileage, "", new { @class = "text-danger" })
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(m => m.Fuel_type, new { @class = "form-label" })
                            @Html.DropDownListFor(m => m.Fuel_type,
                                new SelectList(new List<string> { "Petrol", "Diesel", "CNG", "Electric", "Hybrid" }),
                                "Select Fuel Type",
                                new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Fuel_type, "", new { @class = "text-danger" })
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(m => m.Transmission, new { @class = "form-label" })
                            @Html.DropDownListFor(m => m.Transmission,
                                new SelectList(new List<string> { "Manual", "Automatic", "AMT", "CVT" }),
                                "Select Transmission",
                                new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Transmission, "", new { @class = "text-danger" })
                        </div>

                        <!-- File Upload for Car Images -->
                        <div class="mb-3">
                            <label for="files" class="form-label">Car Images (1–5)</label>
                            <input type="file" name="files" id="files" class="form-control" multiple accept="image/*" />
                            <small class="text-muted">You can upload between 1 and 5 images.</small>
                            @Html.ValidationMessage("files", "", new { @class = "text-danger" })

                        </div>

                        <div class="text-end">
                            <input type="submit" value="Save" class="btn btn-success" />
                            <a href="@Url.Action("Index", "Seller")" class="btn btn-secondary ms-2">Back to List</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
