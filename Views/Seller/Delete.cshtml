@model Project.Models.Car

@{
    ViewBag.Title = "Delete Car";
}

<h2>Delete Car</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>@Model.Name</h4>
    <dl class="dl-horizontal">
        <dt>Brand</dt>
        <dd>@Model.Brand</dd>
        <dt>Model</dt>
        <dd>@Model.Model</dd>
        <dt>Year</dt>
        <dd>@Model.Year</dd>
        <dt>Price</dt>
        <dd>@Model.Price</dd>
    </dl>
</div>

@using (Html.BeginForm("DeleteConfirmed", "Seller", new { id = Model.Id }))
{
    @Html.AntiForgeryToken()
    <input type="submit" value="Delete" class="btn btn-danger" />
 |
@Html.ActionLink("Cancel", "Index")
}
