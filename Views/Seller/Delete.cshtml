@model Project.Models.Car

@{
    ViewBag.Title = "Delete Car";
    Layout = "~/Views/Shared/Argon.cshtml";
}

<div class="container-fluid mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow">
                <div class="card-header bg-gradient-danger text-white">
                    <h4 class="mb-0">Delete Car</h4>
                </div>
                <div class="card-body">
                    <h5 class="text-danger">Are you sure you want to delete this car?</h5>
                    <hr />

                    <dl class="row">
                        <dt class="col-sm-4">Name</dt>
                        <dd class="col-sm-8">@Model.Name</dd>

                        <dt class="col-sm-4">Brand</dt>
                        <dd class="col-sm-8">@Model.Brand</dd>

                        <dt class="col-sm-4">Model</dt>
                        <dd class="col-sm-8">@Model.Model</dd>

                        <dt class="col-sm-4">Year</dt>
                        <dd class="col-sm-8">@Model.Year</dd>

                        <dt class="col-sm-4">Price</dt>
                        <dd class="col-sm-8">₹@Model.Price</dd>

                        <dt class="col-sm-4">Fuel Type</dt>
                        <dd class="col-sm-8">@Model.Fuel_type</dd>

                        <dt class="col-sm-4">Transmission</dt>
                        <dd class="col-sm-8">@Model.Transmission</dd>
                    </dl>

                    <!-- Show images if available -->
                    @if (Model.CarImages != null && Model.CarImages.Any())
                    {
                        <div class="row mt-3">
                            @foreach (var img in Model.CarImages)
                            {
                                <div class="col-md-4 mb-3">
                                    <img src="@Url.Action("GetImage", "Buyer", new { id = img.Id })"
                                         class="img-fluid rounded shadow-sm border"
                                         alt="Car Image" />
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">No images uploaded for this car.</p>
                    }

                    @using (Html.BeginForm("Delete", "Seller", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(m => m.Id)

                        <div class="d-flex justify-content-end mt-4">
                            <input type="submit" value="Delete" class="btn btn-danger me-2" />
                            <a href="@Url.Action("Index", "Seller")" class="btn btn-secondary">Cancel</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
