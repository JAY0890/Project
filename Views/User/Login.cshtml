@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/Argon.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <div class="card shadow border-0">
                <div class="card-body px-lg-5 py-lg-5">

                    <h2 class="text-center mb-4">THE GO CARS</h2>
                    <h5 class="text-center mb-4">Login Page</h5>

                    @if (ViewBag.ErrorMessage != null)
                    {
                        <div class="alert alert-danger text-center">
                            @ViewBag.ErrorMessage
                        </div>
                    }

                    @using (Html.BeginForm("Login", "User", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-group mb-3">
                            @Html.Label("Email", htmlAttributes: new { @class = "form-control-label" })
                            @Html.TextBox("Email", null, new { @class = "form-control form-control-alternative", placeholder = "Enter your email" })
                        </div>

                        <div class="form-group mb-3">
                            @Html.Label("Password", htmlAttributes: new { @class = "form-control-label" })
                            @Html.Password("Password", null, new { @class = "form-control form-control-alternative", placeholder = "Enter your password" })
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-primary my-4 w-100">Login</button>
                        </div>

                        <p class="text-center text-muted mt-3">
                            Don’t have an account?
                            <a href="@Url.Action("Registration", "User")" class="text-primary">Create here</a>
                        </p>
                    }
                </div>
            </div>

        </div>
    </div>
</div>
