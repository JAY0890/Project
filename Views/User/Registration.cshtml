@model Project.Models.User

@{
    ViewBag.Title = "Registration";
    Layout = "~/Views/Shared/Argon.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow border-0">
                <div class="card-body px-lg-5 py-lg-5">
                    <h2 class="text-center mb-4">THE GO CARS</h2>
                    <h5 class="text-center mb-4">Registration Page</h5>

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="form-group mb-3">
                            @Html.LabelFor(model => model.Name, new { @class = "form-control-label" })
                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control form-control-alternative" } })
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group mb-3">
                            @Html.LabelFor(model => model.Email, new { @class = "form-control-label" })
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control form-control-alternative" } })
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group mb-3">
                            @Html.LabelFor(model => model.Password, new { @class = "form-control-label" })
                            @Html.PasswordFor(model => model.Password, new { @class = "form-control form-control-alternative" })
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group mb-3">
                            @Html.LabelFor(model => model.Phone, new { @class = "form-control-label" })
                            @Html.TextBoxFor(model => model.Phone, new
                            {
                                @class = "form-control form-control-alternative",
                                type = "tel",
                                pattern = @"\d{10}",
                                maxlength = "10",
                                oninput = "this.value = this.value.replace(/[^0-9]/g, '')"
                            })
                            @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group mb-3">
                            @Html.LabelFor(model => model.Type, new { @class = "form-control-label" })
                            @Html.DropDownListFor(model => model.Type,
                                new List<SelectListItem>
                                {
                                    new SelectListItem { Text = "Buyer", Value = "true" },
                                    new SelectListItem { Text = "Seller", Value = "false" }
                                },
                                "Select User Type",
                                new { @class = "form-control form-control-alternative" }
                            )
                            @Html.ValidationMessageFor(model => model.Type, "", new { @class = "text-danger" })
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-success my-4 w-100">Register</button>
                            <a href="@Url.Action("Login", "User")" class="btn btn-primary w-100">Login</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
